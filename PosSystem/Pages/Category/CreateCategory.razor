@page "/category/create"
@attribute [Authorize]
@using Radzen
<div class="row d-flex justify-content-around">
    <div class="col-5 py-5 shadow rounded bg-white">
        <div class="row d-flex justify-content-center">
            <h3 class="text-center">Upload Image</h3>
        </div>
        @if (UploadFile is not null || Model.ImageName is not null)
        {
            <div class="row">
                <MudImage Src="@((UploadFile is not null) ? UploadFile :
                            (Model.ImageName is not null ? ImagePath : ""))"
                          Height="200" Width="400" ObjectFit="ObjectFit.Cover" Alt="@FileName" />
            </div>
        }
    </div>
    <EditForm Model="Model" class="col-5 shadow py-5 bg-white rounded" OnValidSubmit="SubmitCategory">
        <div class="row d-flex justify-content-center">
            <h3 class="text-center">Create Category</h3>
        </div>
        <div class="row mb-3 px-5">
            <MudTextField @bind-Value="@Model.CategoryName" Label="Category Name" Variant="MudBlazor.Variant.Outlined" Margin="Margin.Dense"></MudTextField>
        </div>
        <div class="row mb-3 px-5">
            <MudFileUpload T="IBrowserFile" FilesChanged="OnChangeAsync">
                <ActivatorContent>
                    <MudButton Size="Size.Small"
                               Variant="MudBlazor.Variant.Filled"
                               Color="Color.Success"
                               StartIcon="@Icons.Material.Filled.AttachFile">
                        Upload Image
                    </MudButton>
                </ActivatorContent>
            </MudFileUpload>
        </div>

        <div class="row d-flex justify-content-end px-5">
            <button type="submit" class="col-3 btn btn-primary">Submit</button>
        </div>
    </EditForm>

</div>
